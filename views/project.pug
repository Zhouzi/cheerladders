extends layout

block body
  section.hero
    if project
      h1 #{project.name}
      h2 #{project.slogan}
    else
      h1: span(contenteditable)#project-name Project name (edit me)
      h2: span(contenteditable)#project-slogan Project slogan (edit me)
  section.section
    .container
      p.lead
        | Thank you very much for taking the time to support the project.
        | Please find below a list of all the ways you can greatly help us thanks to a few clicks.
      ol#widget-list
  section.section(style=project ? 'display: none' : '')#widget-form-container
    .container
      h3 Add a widget
      p: label(for='widget') Add another way to support the project.
      form#widget-form.widget-form
        .widget-form__input
          select#widget.input

        .widget-form__button
          button(type='submit').button Add
      p(style=project ? '' : 'display: none')#share-link
        | Share this link to allow other users to add widgets to this page: #[a(href=project ? '/support/' + project.slug + '?token=' + project.token : '#', target='_blank') share link.]
  if project
    script.
      window.projectSlug = '#{project.slug}';
      window.projectWidgets = !{JSON.stringify(project.widgets)};
  script(src='/assets/widgets.js')
  script(src='/assets/app.js')
